<h2>Categorize</h2>
<%= image_tag @kitten.image %>

<%= form_for [@kitten, @categorization] do |form| %>

  <% if @categorization.errors.any? %>
    <% @categorization.errors.full_messages.each do |error| %>
      <p class="errors"><%= error %></p>
    <% end %>
  <% end %>

  <%= form.collection_select(:category_id, @categories, :id, :name, include_blank: "Please choose a category..." ) %>
  <%= form.submit "Add Category" %>

<% end %>